<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#2D7F83">

    <!-- Título de la aplicación -->

    <!-- Botones de selección del jugador -->
    <TextView
        android:id="@+id/gameTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="20dp"
        android:background="#154F7E"
        android:text="Piedra, Papel o Tijera"
        android:textAlignment="center"
        android:textColor="#DCE6E3DA"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnPiedra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#154F7E"
            android:layout_margin="8dp"
            android:text="Piedra"
            />
        <Button
            android:id="@+id/btnPapel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#154F7E"
            android:layout_margin="8dp"
            android:text="Papel" />

        <Button
            android:id="@+id/btnTijera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#154F7E"
            android:layout_margin="8dp"
            android:text="Tijera" />
    </LinearLayout>

    <!-- Resultados -->
    <TextView
        android:id="@+id/tvResultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Resultado: "
        android:textColor="#DC141311"
        android:textSize="18sp" />

    <!-- Elección de la computadora -->
    <TextView
        android:id="@+id/tvEleccionComputadora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Elección Computadora: "
        android:textColor="#DC050505"
        android:textSize="18sp" />

    <!-- Contador de puntuación -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvPuntuacionJugador"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:text="Jugador: 0"
            android:textColor="#DC0F0E0D"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvPuntuacionComputadora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Computadora: 0"
            android:textColor="#DC121211"
            android:textSize="18sp" />
    </LinearLayout>
